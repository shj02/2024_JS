<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>array-filter-reduce</title>
</head>
<body>
    <script>
        const numbers = [1, 3, 5, 7, 9];

        // filter() : 배열의 각 요소에 대한 지정된 함수를 호출하여 결과가 참인 요소만 모아 새로운 배열이나 기존 배열에 반환
        const remains = numbers.filter(function(value, index) {
            return (value % 3) == 1;    // 1, 7
        });
        document.write(`remains => ${remains} <br>`)

        // reduce() : 배열의 각 요소에 대해 지정된 함수를 호출하여 하나의 결과값을 반환하는 함수(반복)
        const sum = numbers.reduce(makeSum, 10); // total의 초기값 : 10
        function makeSum(total, item) {
            document.write(`total, item : ${total}, ${item} <br>`);
            return total + item;
        }
        document.write('sum = ', sum);  // 10+1+3+5+7+9 = 35
    </script>
</body>
</html>
